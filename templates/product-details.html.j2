{% extends 'base.html.j2' %}

{% block head %}
{% endblock %}

{% block body %}

<h1>Invoice Details</h1>
<br/>
<form method="POST">
    {{ form.csrf_token }}
    <table id="productdetailsform">   
        <tr>
            <td>
                <table id="productnameselect" style="width: 150px;">
                    <tr>
                        <thead style="text-align: center; font-weight: bold;">
                            <td>{{ form.productname.label(class="form-label") }}</td>
                        </thead>
                    </tr>
                    <tr>
                        <td>{{ form.productname(**{"style": "width:100%;", "hx-get": "/productname-revalidate", "hx-include": "#productdetailsform", "hx-target": "#productdetailsfields"}) }}</td>
                    </tr>
                </table>
            </td>
            <td>
                <table id="productdetailsfields" style="width: 100%;">
                    <tr>
                        <thead style="text-align: center; font-weight: bold;">
                            <td>{{ form.producthsn.label(class="form-label") }}</td>
                            <td>{{ form.productrate.label(class="form-label") }}</td>
                            <td>{{ form.productquantity.label(class="form-label") }}</td>
                            <td>{{ form.productprice.label(class="form-label") }}</td>
                            <td>{{ form.productdiscount.label(class="form-label") }}</td>
                            <td>{{ form.productvalue.label(class="form-label") }}</td>
                            <td>{{ form.productgst.label(class="form-label") }}</td>
                            <td>{{ form.productamount.label(class="form-label") }}</td>
                        </thead>
                    </tr>
                    <tr>
                        <td>{{ form.producthsn }}</td>
                        <td>{{ form.productrate(**{"hx-get": "/productfields-revalidate", "hx-include": "#productdetailsform", "hx-target": "#productdetailsfields"}) }}</td>
                        <td>{{ form.productquantity(**{"hx-get": "/productfields-revalidate", "hx-include": "#productdetailsform", "hx-target": "#productdetailsfields"}) }}</td>
                        <td>{{ form.productprice }}</td>
                        <td>{{ form.productdiscount(**{"hx-get": "/productfields-revalidate", "hx-include": "#productdetailsform", "hx-target": "#productdetailsfields"}) }}</td>
                        <td>{{ form.productvalue }}</td>
                        <td>{{ form.productgst }}</td>
                        <td>{{ form.productamount }}</td>
                        <td>{{ form.addproduct }}</td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</form>
<table cellpadding=5 cellspacing=5 id="itemslisttable" style="margin-top: 20px;">
    <tr>
        <thead style="text-align: center; font-weight: bold; border-bottom: 3px solid #aaa;">
            <td>Name</td>
            <td>HSN</td>
            <td>Rate</td>
            <td>Quantity</td>
            <td>Price</td>
            <td>Discount</td>
            <td>Taxable Value</td>
            <td>Aggregate GST (%)</td>
            <td>Amount</td>
        </thead>
    </tr>
    <tbody style="text-align: center;">
    {% for item in itemslist %}
    <tr>
        <td>{{ item.name }}</td>
        <td>{{ item.hsn }}</td>
        <td>{{ item.rate }}</td>
        <td>{{ item.quantity }}</td>
        <td>{{ item.price }}</td>
        <td>{{ item.discount }}</td>
        <td>{{ item.value }}</td>
        <td>{{ item.gst }}</td>
        <td>{{ item.amount }}</td>
        <td><a href="/delete/{{item.id}}">
            <button type="button" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path>
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path>
                </svg>
                Delete Product
            </button>
        </a>
        </td>
    </tr>
    {% endfor %}
    {% if itemslist|length > 0 %}
    <tr>
        <td>Subtotal</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>{{ subtotals[0] }}</td>
        <td>{{ subtotals[1] }}</td>
        <td>{{ subtotals[2] }}</td>
        <td>{{ subtotals[3] }}</td>
    </tr>
    {% endif %}
    </tbody>
</table>
<a href="/generate-invoice">
    <button class="btn btn-primary">Submit</button>
</a>


{% endblock %}